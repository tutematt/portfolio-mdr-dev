---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Icon from '../components/Icon.astro';
import { SITE_TITLE } from '../consts';

const skills = [
  "JavaScript", "TypeScript", "React", "Node.js", "GraphQL", "Python", "Docker", "AWS"
];

const sections = [
  { title: "Experiencia", href: "/experience", icon: "briefcase" },
  { title: "Educación", href: "/education", icon: "academic-cap" },
  { title: "Habilidades", href: "/skills", icon: "code" },
  { title: "Proyectos", href: "/projects", icon: "document" },
];
---

<Layout title={SITE_TITLE}>
  <main class="bg-gray-900 text-white min-h-screen">
    <section class="container mx-auto px-4 py-20 md:py-32">
      <div class="flex flex-col items-center text-center mb-12">
        <img 
          class="rounded-full w-32 h-32 mb-8 border-4 border-blue-500 transition-transform duration-300 transform hover:scale-110" 
          src="/images/photo_perfil.png" 
          alt="Foto de Matias Rodoni"
          width="128"
          height="128"
        />
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
          Hey, soy <span class="text-gradient">Matias Rodoni</span>
        </h1>
        <h2 class="text-2xl md:text-3xl mb-6">
          <span class="text-blue-400">Software Engineer</span> y 
          <span class="text-emerald-400">Full Stack Developer</span>
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl">
          Apasionado por crear soluciones innovadoras y escalables. 
          Especializado en arquitecturas de microservicios y desarrollo web moderno.
        </p>
        <Badge class="text-lg py-2 px-4">Disponible para proyectos</Badge>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {sections.map(({ title, href, icon }) => (
          <a href={href} class="bg-gray-800 rounded-lg p-6 transition-transform duration-300 hover:scale-105 hover:bg-gray-700">
            <div class="flex items-center mb-4">
              <Icon name={icon} class="w-6 h-6 mr-2 text-blue-400" />
              <h3 class="text-2xl font-semibold">{title}</h3>
            </div>
            <p class="text-gray-400">Explora mi {title.toLowerCase()} y descubre más sobre mi trayectoria profesional.</p>
          </a>
        ))}
      </div>

      <div class="text-center">
        <h3 class="text-2xl font-semibold mb-6">Tecnologías que domino</h3>
        <div class="flex flex-wrap justify-center gap-4">
          {skills.map((skill) => (
            <span class="bg-gray-800 text-blue-400 rounded-full px-4 py-2 text-sm font-medium">
              {skill}
            </span>
          ))}
        </div>
      </div>
    </section>

    <section class="py-20 bg-gradient-to-b from-gray-900 to-gray-800">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-8">¿Listo para colaborar en tu próximo proyecto?</h2>
        <a href="/contact" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-full text-lg transition duration-300">
          Contáctame
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .text-gradient {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-emerald-400;
    animation: gradient 5s ease-in-out infinite;
    background-size: 200% 200%;
  }

  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Efecto de "typing" para simular código */
  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  .typing-effect {
    overflow: hidden;
    border-right: .15em solid orange;
    white-space: nowrap;
    margin: 0 auto;
    letter-spacing: .15em;
    animation: 
      typing 3.5s steps(40, end),
      blink-caret .75s step-end infinite;
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: orange; }
  }
</style>